# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=titans_user
DB_PASSWORD=titans_password
DB_NAME=titans_db

# PostgreSQL Configuration (alternative naming)
PGHOST=db
PGPORT=5432
PGUSER=titans_user
PGPASSWORD=titans_password
PGDATABASE=titans_db

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Model and Storage Paths
CHROMA_DB_PATH=chroma_db
MODELS_DIR=./models
EMBEDDING_MODEL=text-embedding-ada-002

# GPU Configuration
# Set to 'true' to force GPU usage, 'false' to disable, 'auto' to detect automatically
ENABLE_GPU=auto

# NVIDIA GPU Settings (Linux only)
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility
CUDA_VISIBLE_DEVICES=all

# Cache Directories (for better performance)
HF_HOME=/app/cache/huggingface
TORCH_HOME=/app/cache/torch
WHISPER_CACHE=/app/cache/whisper
